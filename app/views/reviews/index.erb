<h2> Hi <%= @critic.username %>!</h2>
<h3>Here are all of the Movie Reviews:</h3>


<% @reviews.each do |review| %>
  <div>
    <p><a href="/reviews/<%=review.id%>"><%= review.title %></a></p>
    <p>Genre: <%= review.genre %></p>
    <p>Description: <%= review.content %></p>
    <p>Rating: <%= review.rating %></p>
    <br>
  </div>
<% end %>

<a href="/reviews/new"> Add another Movie Review to your list </a><br>
<a href="/logout"> Log Out </a>

<h3>Other Users' Reviews</h3>

<% Review.all.each do |review| %>
  <div>
    <!-- <%if review.title != nil && review.critic_id != @critic.id%> -->
      <p>Name of Movie: <%= review.title %></p>
      <p>Critic: <%=Critic.find(review.critic_id).username%></p>
      <p>Genre: <%= review.genre %></p>
      <p>Description: <%= review.content %></p>
      <p>Rating: <%= review.rating %></p>
      <br>
    <!-- <%end%> -->
  </div>
<% end %>
